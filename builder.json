
{
  "appId": "com.xgeek.pipeline",
  "productName": "Pipeline",
  "directories": {
    "output": "./build/dist"
  },
  "files": [
    "**/*",
    "!LICENSE",
    "!README.md",
    "!.gitignore",
    "!package.json",
    "!package-lock.json",
    "!test/*",
    "!node_modules/electron-builder/*",
    "!node_modules/electron-builder-squirrel-windows/*",
    "!node_modules/electron-packager/*",
    "!node_modules/electron-prebuilt/*",
    "!src/view/bower.json",
    "!src/view/.bowerrc",
    "!src/view/components/font-awesome/js/*",
    "!src/view/components/font-awesome/js-packages/*",
    "!src/view/components/font-awesome/less/*",
    "!src/view/components/font-awesome/metadata/*",
    "!src/view/components/font-awesome/scss/*",
    "!src/view/components/xlsx-populate/examples/*",
    "!src/view/components/js-xlsx/demos/*",
    "!src/view/components/js-xlsx/docbits/*",
    "!src/view/components/js-xlsx/test_files/*",
    "!src/view/components/js-xlsx/tests/*",
    "!src/view/components/js-xlsx/types/*",
    "!src/view/components/salesforce-lightning-design-system/design-tokens/*",
    "!src/view/components/salesforce-lightning-design-system/scss/*",
    "!src/view/components/salesforce-lightning-design-system/ui/*",
    "!src/view/components/vue/benchmarks/*",
    "!src/view/components/vue/examples/*",
    "!src/view/components/vue/packages/*",
    "!src/view/components/vue/src/*",
    "!src/view/components/vue/test/*",
    "!src/view/components/vue/types/*"
  ],
  "linux": {},
  "mac" : {
    "category": "public.app-category.developer-tools",
    "target": [
      "dmg"
    ]
  },
  "win" : {
    "target": [
      "squirrel"
    ],
    "artifactName" : "Pipeline-${version}-setup.${ext}"
  }
}